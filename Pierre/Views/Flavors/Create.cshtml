@{
  Layout = "_FlavorsLayout";
}
@model Pierre.Models.Flavor

<h1>Add a new flavor</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required="required" })
  @Html.Label("Select treat")
  @Html.DropDownList("TreatId", (SelectList)ViewBag.TreatId, "None")

  <input type="submit" value="Add new flavor" />
}