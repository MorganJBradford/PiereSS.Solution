@{
  Layout = "_Layout";
}
@using Pierre.Models
@model List<Pierre.Models.Flavor>

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <p>No flavors have been added to the system</p>
}

<ul>
@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
}
</ul>

<button>@Html.ActionLink("New flavor", "Create")</button>