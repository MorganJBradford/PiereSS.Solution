@{
  Layout = "_Layout";
}
@using Pierre.Models
@model List<Pierre.Models.Treat>

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <p>No treats have been added to the system</p>
}

<ul>
@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
}
</ul>

<button>@Html.ActionLink("New treat", "Create")</button>