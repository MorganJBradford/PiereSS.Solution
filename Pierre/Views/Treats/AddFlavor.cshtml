@{
  Layout = "_TreatsLayout";
}
@model Pierre.Models.Treat

<h1>Add a flavor</h1>
<h2>Add a flavor for the following treat: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)
  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")
  <input type="submit" value="Save" />
}